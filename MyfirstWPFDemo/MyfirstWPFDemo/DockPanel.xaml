<Window x:Class="MyfirstWPFDemo.DockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyfirstWPFDemo"
        mc:Ignorable="d"
        Title="DockPanel面板的使用" Height="200" Width="320">
    <Grid>
        <DockPanel>
            <TextBox DockPanel.Dock="Top" Height="30"  BorderBrush="Black"/>
            <TreeView DockPanel.Dock="Left" Width="50" BorderBrush="Black" />
            <ListBox BorderBrush="Black"  />
      </DockPanel>
    </Grid>
</Window>

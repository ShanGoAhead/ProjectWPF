<Window x:Class="StudentManageWPF.Forms.ModifyPwdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManageWPF.Forms"
        mc:Ignorable="d"
        Title="ModifyPwdWindow" Height="211" Width="284" WindowStartupLocation="CenterScreen">
    <Grid Background="#EFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="123*"/>
            <ColumnDefinition Width="44*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14">原密码：</TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Right" FontSize="14" Foreground="Blue"  >新密码：</TextBlock>
        <TextBlock Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Right" FontSize="13" Foreground="Red" >新密码确认：</TextBlock>
        <TextBox x:Name="txtOldPwd" Grid.Column="3" Grid.Row="1"  Width="120" Background="White"/>
        <TextBox x:Name="txtNewPwd" Grid.Column="3" Grid.Row="3"  Width="120" Background="White"/>
        <TextBox x:Name="txtNewPwdConfirm" Grid.Column="3" Grid.Row="5"  Width="120" Background="White"/>
        <Button Name="btnModify" Click="btnModify_Click" Content="确认修改" FontSize="14" Grid.ColumnSpan="3" Margin="62,0,84,0" Grid.Column="1" Grid.Row="7"/>
        <Button Name="btnCancel" Click="btnCancel_Click"  Content="取  消" FontSize="14" Margin="48,0,0,0" Grid.Column="3" Grid.Row="7"/>
    </Grid>
</Window>
